[Unit]
Description=Fake News Detector Flask App
After=network.target

[Service]
User=YOUR_USERNAME
WorkingDirectory=/home/YOUR_USERNAME/news
Environment="PATH=/home/YOUR_USERNAME/news/venv/bin"
ExecStart=/home/YOUR_USERNAME/news/venv/bin/gunicorn --workers 3 --bind 127.0.0.1:5000 app:app

[Install]
WantedBy=multi-user.target
